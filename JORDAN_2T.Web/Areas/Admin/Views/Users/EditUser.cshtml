@model EditUserViewModel
@using JORDAN_2T.ApplicationCore.ViewModels

@{
    ViewBag.Title = "Edit User";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit User</h4>

                    <form method="post" class="mt-3">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Id">ID</label>
                                        <input asp-for="Id" disabled class="form-control" placeholder="col-md-12">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Email">Email</label>
                                        <input asp-for="Email" disabled class="form-control" placeholder="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="UserName">Username</label>
                                        <input asp-for="UserName" disabled class="form-control" placeholder="Username">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Phone"></label>
                                        <input asp-for="Phone" disabled class="form-control" placeholder="Phone">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="UserName">User Roles</label>
                                        <div class="card-footer">
                                            @if (Model.Roles.Any())
                                            {
                                                foreach (var role in Model.Roles)
                                                {
                                                    <h5 class="card-title">@role</h5>
                                                }
                                            }
                                            else
                                            {
                                                <h5 class="card-title">None at the moment</h5>
                                            }
                                            <a asp-controller="Users" asp-action="ManageUserRoles" asp-route-UserId="@Model.Id"
                                        style="width:auto" class="btn btn-danger">
                                        Manage Roles
                                        </a>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>

                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        @* <button type="submit" class="btn btn-primary">Update</button> *@
                                        <a asp-action="Index" class="btn btn-primary">Cancel</a>
                                    </div>
                                </div>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>